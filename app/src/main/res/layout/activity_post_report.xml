<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.root.offmap.PostReport"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="یکی از گزینه‌ها را انتخاب کرده و توضیحات لازم برای امدادگر یا پناه‌جو را وارد کنید:"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:autoText="false"
        android:gravity="right"
        android:textSize="20dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/radio">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تلفات"
            android:id="@+id/radioButton"
            android:layout_gravity="left"
            android:singleLine="false"
            android:layout_margin="5dp"
            android:checked="true"
            android:tag="1"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="آسیب دیدگی"
            android:id="@+id/radioButton2"
            android:layout_gravity="left"
            android:singleLine="false"
            android:layout_margin="5dp"
            android:tag="2"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="مکان امن"
            android:id="@+id/radioButton3"
            android:layout_gravity="left"
            android:singleLine="false"
            android:layout_margin="5dp"
            android:tag="3"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="کمک های اولیه"
            android:id="@+id/radioButton4"
            android:layout_gravity="left"
            android:singleLine="false"
            android:layout_margin="5dp"
            android:tag="4"/>
    </RadioGroup>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_weight="0.42"
        android:gravity="right"
        android:layout_margin="10dp"
        android:hint="توضیحات..." />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="فرستادن"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp" />

</LinearLayout>
